<UserControl
    x:Class="Courses.WPF.View.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:GroupsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Groups list  -->
        <Grid Background="#777">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="75"
                    Margin="10"
                    Command="{Binding CreateCommand}"
                    Content="Create" />
                <Button
                    Width="75"
                    Margin="0,10,10,10"
                    Command="{Binding DeleteCommand}"
                    Content="Delete" />
            </StackPanel>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                ItemTemplate="{StaticResource GroupDataTemplate}"
                ItemsSource="{Binding Path=Groups}"
                SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" />
        </Grid>

        <!--  Group detail  -->

        <StackPanel
            Grid.Column="1"
            Margin="10"
            Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                <Grid Margin="10" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Command="{Binding ImportCommand}"
                        Content="Import sts" />
                    <Button
                        Grid.Column="1"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Content="Export sts" />
                    <Button
                        Grid.Column="2"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Content="Summary" />
                </Grid>
            </StackPanel>
            <Label>Group name:</Label>
            <TextBox Text="{Binding SelectedGroup.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Group teacher:</Label>
            <ComboBox ItemsSource="{Binding Path=Teachers}" SelectedItem="{Binding SelectedTeacher}" />
            <Label Content="Number of students: " />
            <Button
                Width="75"
                Margin="10"
                HorizontalAlignment="Left"
                Content="Clear group" />
        </StackPanel>
    </Grid>
</UserControl>
