<UserControl
    x:Class="Courses.WPF.View.TeachersView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:TeachersViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="TeacherDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding FirstName}" />
                <TextBlock Text="{Binding LastName}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Teachers list  -->
        <Grid Background="#777">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Button
                    Width="75"
                    Margin="10"
                    Command="{Binding CreateCommand}"
                    Content="Create" />
                <Button
                    Width="75"
                    Margin="0,10,10,10"
                    Command="{Binding DeleteCommand}"
                    Content="Delete" />
            </StackPanel>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                ItemTemplate="{StaticResource TeacherDataTemplate}"
                ItemsSource="{Binding Teachers}"
                SelectedItem="{Binding SelectedTeacher, Mode=TwoWay}" />
        </Grid>

        <!--  Teacher detail  -->
        <StackPanel
            Grid.Column="1"
            Margin="10"
            Visibility="{Binding IsTeacherSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical" />
            <Label>Teacher's first name:</Label>
            <TextBox Text="{Binding SelectedTeacher.FirstName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label>Teacher's last name:</Label>
            <TextBox Text="{Binding SelectedTeacher.LastName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
    </Grid>

</UserControl>
