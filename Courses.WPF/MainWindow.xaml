<Window
    x:Class="Courses.WPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Courses.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="AliceBlue"
    FontSize="20"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!--  Main menu  -->
        <Menu
            Grid.ColumnSpan="3"
            Background="AliceBlue"
            FontSize="20">
            <MenuItem Header="_Menu">
                <MenuItem Header="_Courses" />
                <MenuItem Header="_Groups" />
                <MenuItem Header="_Students" />
                <MenuItem Header="_Teachers" />
            </MenuItem>
        </Menu>

        <!--  Title  -->
        <Grid
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Background="AliceBlue">
            <StackPanel
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="5,5,5,5"
                Orientation="Horizontal">
                <TextBlock
                    FontSize="30"
                    Foreground="DarkBlue"
                    Text="Courses" />
            </StackPanel>
        </Grid>

        <!--  Courses Groups Tree  -->
        <StackPanel Grid.Row="2" Background="#ebedef">
            <StackPanel Orientation="Horizontal">
                <TreeView Name="sts">
                    <TreeViewItem Header="Level 1" IsExpanded="True">
                        <TreeViewItem Header="Level 2.1" />
                        <TreeViewItem Header="Level 2.2" IsExpanded="True">
                            <TreeViewItem Header="Level 3.1" />
                            <TreeViewItem Header="Level 3.2" />
                        </TreeViewItem>
                        <TreeViewItem Header="Level 2.3" />
                    </TreeViewItem>
                </TreeView>
            </StackPanel>

        </StackPanel>

        <!--  Students list  -->
        <StackPanel
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,10,8,10">
            <Label Foreground="DarkBlue">Students:</Label>
        </StackPanel>

    </Grid>
</Window>
