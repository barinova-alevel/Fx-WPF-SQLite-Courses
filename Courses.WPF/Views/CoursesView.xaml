<UserControl
    x:Class="Courses.WPF.View.CoursesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:Courses.DAL.Models;assembly=Courses.DAL"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:CoursesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="CourseDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Courses Groups Tree  -->
        <Grid Background="#f0f8ff">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Label
                Margin="10"
                HorizontalAlignment="Center"
                Content="Courses"
                FontSize="24"
                Foreground="#00008B" />

            <TreeView
                Grid.Row="1"
                Margin="10,0,10,10"
                BorderThickness="0.5"
                ItemsSource="{Binding Courses}"
                SelectedItemChanged="TreeView_SelectedItemChanged">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type models:Course}" ItemsSource="{Binding StudentsGroups}">
                        <TextBlock Text="{Binding Name}" />
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate DataType="{x:Type models:StudentsGroup}">
                                <TextBlock Margin="5,0,0,0" Text="{Binding Name}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>
        </Grid>

        <!--  Students  -->

        <StackPanel
            Grid.Column="1"
            Margin="10,10,0,10"
            Orientation="Vertical"
            Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <Label Content="Students:" Foreground="#00008B " />
            <ListView ItemsSource="{Binding Students}">
                <ListView.ItemContainerStyle>
                    <Style TargetType="ListViewItem">
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Margin" Value="5,0,0,5" />
                        <Setter Property="Foreground" Value="#00008B" />
                    </Style>
                </ListView.ItemContainerStyle>
                <ListView.View>
                    <GridView>
                        <GridViewColumn DisplayMemberBinding="{Binding FirstName}" Header="First Name">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock
                                        Margin="10,0,0,10"
                                        FontSize="16"
                                        Foreground="#00008B"
                                        Text="{Binding FirstName}" />
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                        <GridViewColumn DisplayMemberBinding="{Binding LastName}" Header="Last Name" />
                    </GridView>
                </ListView.View>
            </ListView>


        </StackPanel>

    </Grid>

</UserControl>
