<UserControl
    x:Class="Courses.WPF.View.CoursesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Courses.WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="CourseDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Courses Groups Tree  -->
        <Grid Background="Goldenrod">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                DisplayMemberPath="Name"
                ItemsSource="{Binding Courses}"
                SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />
        </Grid>

        <!--  Groups  -->
        <StackPanel
            Grid.Column="1"
            Margin="10,10,8,10"
            Visibility="{Binding IsCourseSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <Label Foreground="DarkBlue">Groups:</Label>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                ItemTemplate="{StaticResource GroupDataTemplate}"
                ItemsSource="{Binding Groups}"
                SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" />

        </StackPanel>
    </Grid>

</UserControl>
