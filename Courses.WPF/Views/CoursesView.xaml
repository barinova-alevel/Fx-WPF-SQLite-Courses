<UserControl
    x:Class="Courses.WPF.View.CoursesView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Courses.WPF.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="clr-namespace:Courses.DAL.Model;assembly=Courses.DAL"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:CoursesViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="CourseDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Courses Groups Tree - add ItemsSource="{Binding Groups}"
        in <HierarchicalDataTemplate> (line 39)
        when db is fixed
        -->
        <Grid Background="Goldenrod">
            <TreeView ItemsSource="{Binding Courses}">
                <TreeView.ItemTemplate>
                    <HierarchicalDataTemplate DataType="{x:Type model:Course}">
                        <!--  Course Name  -->
                        <TextBlock Text="{Binding Name}" />
                        <HierarchicalDataTemplate.ItemTemplate>
                            <DataTemplate DataType="{x:Type model:StudentsGroup}">
                                <!--  Group Name  -->
                                <TextBlock Margin="10,0,0,0" Text="{Binding Name}" />
                            </DataTemplate>
                        </HierarchicalDataTemplate.ItemTemplate>
                    </HierarchicalDataTemplate>
                </TreeView.ItemTemplate>
            </TreeView>

        </Grid>

        <!--  Groups  -->
        <StackPanel
            Grid.Column="1"
            Margin="10,10,8,10"
            Visibility="{Binding IsCourseSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <Label Foreground="DarkBlue">Groups:</Label>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                ItemTemplate="{StaticResource GroupDataTemplate}"
                ItemsSource="{Binding Groups}"
                SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" />

        </StackPanel>
    </Grid>

</UserControl>
