<UserControl
    x:Class="Courses.WPF.View.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:GroupsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="Foreground" Value="DarkBlue" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Groups list  -->
        <Grid Background="#777">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label
                    Margin="10"
                    FontSize="24"
                    Foreground="AntiqueWhite">
                    Groups
                </Label>
                <Button
                    Width="75"
                    Margin="10"
                    Command="{Binding CreateCommand}"
                    Content="Create" />
                <Button
                    Width="75"
                    Margin="0,10,10,10"
                    Command="{Binding DeleteCommand}"
                    Content="Delete" />
            </StackPanel>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                ItemTemplate="{StaticResource GroupDataTemplate}"
                ItemsSource="{Binding Groups}"
                SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" />
        </Grid>

        <!--  Group detail  -->

        <StackPanel
            Grid.Column="1"
            Margin="10"
            Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
                <Grid Margin="10" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Command="{Binding ImportCommand}"
                        Content="Import sts" />
                    <Button
                        Grid.Column="1"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Content="Export sts" />
                    <Button
                        Grid.Column="2"
                        Width="75"
                        Margin="10"
                        HorizontalAlignment="Center"
                        Content="Summary" />
                </Grid>
            </StackPanel>
            <StackPanel Margin="10,0,0,0">
                <Label>Group name:</Label>
                <TextBox Text="{Binding SelectedGroup.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged" />
                <Label Content="Group Teacher:" />
                <ComboBox ItemsSource="{Binding Path=Teachers}" SelectedItem="{Binding SelectedTeacher}" />
                <Label Content="Number of students: " />
                <StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
                    <Grid Margin="10,5,5,5" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Button
                            Grid.Column="0"
                            Command="{Binding SaveCommand}"
                            Content="Save"
                            Style="{StaticResource StyledButton}" />
                        <Button
                            Grid.Column="1"
                            Command="{Binding ClearGroupCommand}"
                            Content="Clear group"
                            Style="{StaticResource StyledButton}" />
                    </Grid>
                </StackPanel>

            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
