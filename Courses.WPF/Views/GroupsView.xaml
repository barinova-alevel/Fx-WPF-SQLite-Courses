<UserControl
    x:Class="Courses.WPF.View.GroupsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodel="clr-namespace:Courses.WPF.ViewModel"
    d:DataContext="{d:DesignInstance Type=viewmodel:GroupsViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="GroupDataTemplate">
            <StackPanel>
                <TextBlock Text="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <Style x:Key="StyledButton" TargetType="Button">
            <Setter Property="Width" Value="120" />
            <Setter Property="Height" Value="40" />
            <Setter Property="Margin" Value="10" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Background" Value="AliceBlue" />
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="BorderThickness" Value="0.5" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,5,0,0" />
            <Setter Property="Foreground" Value="DarkBlue" />
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="DarkBlue" />
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,0,0,5" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderThickness" Value="0.5" />
            <Setter Property="BorderBrush" Value="DarkBlue" />
            <Setter Property="Background" Value="AliceBlue" />
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
        </Grid.ColumnDefinitions>

        <!--  Groups list  -->

        <Grid Background="AliceBlue">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" Orientation="Horizontal">
                <Label
                    Margin="10"
                    Content="Groups"
                    FontSize="24"
                    Foreground="DarkBlue" />
                <Button
                    Width="75"
                    Margin="10"
                    Command="{Binding CreateCommand}"
                    Content="Create"
                    Style="{StaticResource StyledButton}" />
                <Button
                    Width="75"
                    Margin="0,10,10,10"
                    Command="{Binding DeleteCommand}"
                    Content="Delete"
                    Style="{StaticResource StyledButton}" />
            </StackPanel>
            <ListView
                Grid.Row="1"
                Margin="10,0,10,10"
                BorderThickness="0.5"
                FontSize="18"
                ItemTemplate="{StaticResource GroupDataTemplate}"
                ItemsSource="{Binding Groups}"
                ScrollViewer.HorizontalScrollBarVisibility="Auto"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                SelectedItem="{Binding SelectedGroup, Mode=TwoWay}" />
        </Grid>

        <!--  Group detail  -->

        <StackPanel
            Grid.Column="1"
            Margin="10"
            Visibility="{Binding IsGroupSelected, Converter={StaticResource BooleanToVisibilityConv}}">
            <StackPanel
                Margin="10"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
                <Grid Margin="10,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Command="{Binding ImportCommand}"
                        Content="Import students"
                        Style="{StaticResource StyledButton}" />
                    <Button
                        Grid.Column="1"
                        Content="Export students"
                        Style="{StaticResource StyledButton}" />
                    <Button
                        Grid.Column="2"
                        Content="Summary"
                        Style="{StaticResource StyledButton}" />
                </Grid>
            </StackPanel>
            <StackPanel Margin="10,0,10,0">
                <Label Content="Group name:" />
                <TextBox Text="{Binding SelectedGroup.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" TextChanged="TextBox_TextChanged" />
                <Label Content="Group Teacher:" />
                <ComboBox
                    Background="AliceBlue"
                    BorderBrush="DarkBlue"
                    ItemsSource="{Binding Path=Teachers}"
                    SelectedItem="{Binding SelectedTeacher}" />
                <Label Content="Number of students: " />

            </StackPanel>
            <StackPanel
                Margin="10"
                HorizontalAlignment="Stretch"
                Orientation="Vertical">
                <Grid Margin="10,5,5,5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Button
                        Grid.Column="0"
                        Command="{Binding SaveCommand}"
                        Content="Save"
                        Style="{StaticResource StyledButton}" />
                    <Button
                        Grid.Column="1"
                        Command="{Binding ClearGroupCommand}"
                        Content="Clear group"
                        Style="{StaticResource StyledButton}" />
                </Grid>
            </StackPanel>

        </StackPanel>
    </Grid>
</UserControl>
